PACKAGE_NAME=toolchain

PACKAGE_URL=$(NERVES_TOOLCHAIN_URL)
PACKAGE_FILE=$(NERVES_TOOLCHAIN_DIR).tar.gz
PACKAGE_ARCHIVE_DIR=$(NERVES_TOOLCHAIN_DIR)

CUSTOM_BUILD=1

include $(BASEDIR)/package.mk

$(NERVES_BUILD_DIR)/$(PACKAGE_NAME)/.installed: $(NERVES_BUILD_DIR)/$(PACKAGE_NAME)/.unpacked
	cd $(NERVES_BUILD_DIR)/$(PACKAGE_NAME) && mv $(NERVES_TOOLCHAIN_DIR) ..
	touch $(NERVES_BUILD_DIR)/$(PACKAGE_NAME)/.installed
