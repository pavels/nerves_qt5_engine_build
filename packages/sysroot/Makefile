PACKAGE_NAME=sysroot

PACKAGE_URL=$(NERVES_SYSTEM_IMAGE_URL)
PACKAGE_FILE=$(NERVES_SYSTEM_IMAGE_DIR).tar.gz
PACKAGE_ARCHIVE_DIR=$(NERVES_SYSTEM_IMAGE_DIR)

CUSTOM_BUILD=1

include $(BASEDIR)/package.mk

$(NERVES_BUILD_DIR)/$(PACKAGE_NAME)/.installed: $(NERVES_BUILD_DIR)/$(PACKAGE_NAME)/.unpacked
	cd $(NERVES_BUILD_DIR)/$(PACKAGE_NAME) && mv $(NERVES_SYSTEM_IMAGE_DIR) ..
	touch $(NERVES_BUILD_DIR)/$(PACKAGE_NAME)/.installed
